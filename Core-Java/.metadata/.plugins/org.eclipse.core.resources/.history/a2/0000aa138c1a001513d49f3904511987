public class BST {

    private boolean isValid = false;

    public static class Node {

        public int value;
        public Node left;
        public Node right;
    }

    // Checks if a binary tree is a binary search tree.
    public boolean isBST(Node root) {
        DFS(root, Integer.MAX_VALUE, Integer.MIN_VALUE);
        return this.isValid;
    }

    private boolean DFS(Node root, int minValue, int maxValue) {

        if (root == null) {
            return true;
        }
        
        if(root.left.value <= root.value && root.right.value > root.value
                && checkLeftSubTree(root.left, minValue, root.value)
                && checkRightSubTree(root, root.value, maxValue) {
            return true;
        } else {
            return false;
        }
    }

    private boolean checkLeftSubTree(Node node, int minValue, int maxValue) {

    }

    private boolean checkRightSubTree(Node node, int minValue, int maxValue) {

    }
}