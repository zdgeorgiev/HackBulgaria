public class MinMaxHeap {

    public static class Node {

        public int value;
        public Node left;
        public Node right;
    }

    // Checks if a binary tree is a min/max heap.
    public boolean isMinMax(Node root) {
        return minMaxHeapUtil(root, 1);
    }

    private boolean minMaxHeapUtil(Node root, int level) {

        if (root == null) {
            return true;
        }

        return checkSubTree(root.left, root, level + 1) && checkSubTree(root.right, root, level + 1);
    }

    private static boolean checkSubTree(Node currentNode, Node parent, int level) {

        if (currentNode == null) {
            return true;
        }

        if ((level & 1) == 0) {

        } else {

        }

        return checkSubTree(currentNode.left, level + 1) && checkSubTree(currentNode.right, level + 1);

    }
}
