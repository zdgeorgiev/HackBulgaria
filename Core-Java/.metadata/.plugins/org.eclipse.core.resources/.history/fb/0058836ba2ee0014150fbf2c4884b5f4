package weatherCrawler;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.InputStreamReader;
import java.net.URL;

public class Program {

    public static void main(String[] args) {
        File outputResults = new File("results.txt");

        try (BufferedReader reader = new BufferedReader(new FileReader("contries.txt"))) {
            String currentCountry;

            while ((currentCountry = reader.readLine()) != null) {
                URL url = new URL("http://api.openweathermap.org/data/2.5/weather?q="
                        + currentCountry.replace(" ", "%20"));

                boolean isCompleted = false;

                while (!isCompleted) {
                    try (BufferedReader in = new BufferedReader(new InputStreamReader(url.openStream()))) {
                        isCompleted = true;

                        System.out.println(currentCountry.replace(" ", "%20"));

                        String inputLine;
                        while ((inputLine = in.readLine()) != null) {
                            System.out.println(inputLine);

                            FileWriter fw = new FileWriter(outputResults.getAbsoluteFile());
                            BufferedWriter bw = new BufferedWriter(fw);
                            bw.write(inputLine);
                            bw.close();
                        }
                    } catch (Exception e) {

                    }
                }

                // try {
                // JSONObject json = new JSONObject(inputLine);
                // System.out.println(s + " " + json.get("country"));
                // } catch (JSONException e) {
                // System.out.println(e.getMessage());
                // e.printStackTrace();
                // }
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
