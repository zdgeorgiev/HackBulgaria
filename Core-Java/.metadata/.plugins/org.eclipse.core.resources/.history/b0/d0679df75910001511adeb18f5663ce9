package sorting;

import java.util.ArrayList;

public class InsertionSort {

    public static void sort(ArrayList<Integer> c) {

        for (int i = 1; i < c.size(); i++) {

            int currentNumber = c.get(i);
            int leftIndex = i - 1;

            while (currentNumber > c.get(leftIndex)) {
                leftIndex--;
            }

            insert(currentNumber, leftIndex, c);
        }
    }

    private static void insert(int value, int index, ArrayList<Integer> c) {

        int[] newData = new int[c.size()];

        // Left part
        for (int i = 0; i < index; i++) {
            newData[i] = this.data[i];
        }

        // Add the element in the index
        newData[index] = value;

        // Right part
        for (int i = index + 1; i < newData.length; i++) {
            newData[i] = this.data[i - 1];
        }

        this.data = newData;
        this.size++;
    }
}
