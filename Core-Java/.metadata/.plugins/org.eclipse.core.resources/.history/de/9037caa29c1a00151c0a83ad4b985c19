public class MinMaxHeap {

    public static class Node {

        public int value;
        public Node left;
        public Node right;
    }

    // Checks if a binary tree is a min/max heap.
    public boolean isMinMax(Node root) {
        return minMaxHeapUtil(root, Integer.MIN_VALUE, Integer.MAX_VALUE, 1);
    }

    private static boolean checkSubTree(Node currentNode, int minValue, int maxValue, int level) {

        if (currentNode == null) {
            return true;
        }

        boolean isValidForCurrentLevel = true;

        if ((level & 1) == 0) {
            isValidForCurrentLevel = currentNode.value < parent.value;
        } else {
            isValidForCurrentLevel = currentNode.value > parent.value;
        }

        return isValidForCurrentLevel && checkSubTree(currentNode.left, currentNode, level + 1)
                && checkSubTree(currentNode.right, currentNode, level + 1);
    }
}
