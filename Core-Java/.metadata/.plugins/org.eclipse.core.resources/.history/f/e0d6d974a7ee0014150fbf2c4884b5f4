package weatherCrawler;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.URL;

import org.json.JSONException;
import org.json.JSONObject;

public class Program {

    public static void main(String[] args) {

        try (BufferedReader reader = new BufferedReader(new FileReader("contries.txt"))) {
            File outputResults = new File("results.txt");

            if (outputResults.exists()) {
                outputResults.delete();
                outputResults.createNewFile();
            }

            String currentCountry;

            while ((currentCountry = reader.readLine()) != null) {
                URL url = new URL("http://api.openweathermap.org/data/2.5/weather?q="
                        + currentCountry.replace(" ", "%20"));

                boolean isCompleted = false;

                while (!isCompleted) {
                    try (BufferedReader in = new BufferedReader(new InputStreamReader(url.openStream()))) {
                        isCompleted = true;

                        String contryResult;
                        while ((contryResult = in.readLine()) != null) {
                            try (FileWriter fw = new FileWriter(outputResults.getAbsoluteFile(), true);
                                    BufferedWriter bw = new BufferedWriter(fw)) {
                                bw.write(contryResult + System.lineSeparator());

                                try {
                                    JSONObject json = new JSONObject(contryResult);
                                    System.out.print(json.get("country") + " " + json.get("temp"));
                                } catch (JSONException e) {
                                    System.out.println(e.getMessage());
                                    e.printStackTrace();
                                }
                            }
                        }
                    }
                }
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}