package sorting;

import static org.junit.Assert.assertTrue;

import java.util.ArrayList;
import java.util.Random;

import org.junit.Before;
import org.junit.Test;

public class SortingTest {

    private ArrayList<Integer> arr;

    @Before
    public void initArray() {
        this.arr = new ArrayList<Integer>();

        for (int i = 0; i < 20; i++) {
            arr.add(new Integer(new Random().nextInt(1_000)));
        }
    }

    @Test
    public void testSelectionSort() {
        SelectionSort.sort(this.arr);
        assertTrue(this.isSorted());
    }

    @Test
    public void testInsertionSort() {
        ArrayList<Integer> cpy = new ArrayList<Integer>();
        int[] integers = new int[] { 65, 264, 726, 275, 682, 813, 298, 909, 560, 479, 536, 599, 605, 400, 297, 449,
                161, 94, 475, 39 };
        for (int i = 0; i < integers.length; i++) {
            cpy.add(integers[i]);
        }

        ArrayList<Integer> cpy2 = new ArrayList<Integer>();
        for (int i = 0; i < integers.length; i++) {
            cpy2.add(integers[i]);
        }

        System.out.println("INSERTION");
        System.out.println(cpy);
        InsertionSort.sort(cpy);
        System.out.println(cpy);
        System.out.println("MERGE");
        System.out.println(cpy2);
        MergeSort.sort(cpy2);
        System.out.println(cpy2);
        assertTrue(this.isSorted());
    }

    @Test
    public void testMergeSort() {
        MergeSort.sort(this.arr);
        assertTrue(this.isSorted());
    }

    @Test
    public void testQuickSort() {
        QuickSort.sort(this.arr);
        assertTrue(this.isSorted());
    }

    @Test
    public void testCountSort() {
        CountSort.sort(this.arr);
        assertTrue(this.isSorted());
    }

    private boolean isSorted() {
        for (int i = 0; i < this.arr.size() - 1; i++) {
            if (this.arr.get(i) > this.arr.get(i + 1)) {
                return false;
            }
        }

        return true;
    }
}