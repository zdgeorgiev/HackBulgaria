package matrix;

public class Threshold implements MatrixOperation {
    private final float MAX_INTENSITY = 1.4f;

    public int withPixel(int x, int y, int[][] matrix) {
        float currentPixelIntensity = matrix[x][y] / 3;

        if (currentPixelIntensity < MAX_INTENSITY) {
            // for black pixel
            return 1;
        }

        // for white pixel
        return 0;
    }
}