package matrix;

public final class Matrix implements MatrixOperation {
    private final int rows;
    private final int cols;

    private int[][] data;

    public Matrix(int rows, int cols) {
        this.setRows(rows);
        this.setCols(cols);
        this.data = new int[this.getRows()][this.getCols()];
    }

    public void operate(MatrixOperation op) {
        for (int i = 0; i < this.data.length; i++) {
            for (int j = 0; j < this.data.length; j++) {
                op.withPixel(i, j, this.data);
            }
        }
    }

    public int getCols() {
        return this.cols;
    }

    private void setCols(int cols) {
        if (cols <= 0) {
            throw new IllegalArgumentException("Invalid cols");
        }
        this.cols = cols;
    }

    public int getRows() {
        return this.rows;
    }

    private void setRows(int rows) {
        if (rows <= 0) {
            throw new IllegalArgumentException("Invalid rows");
        }
        this.rows = rows;
    }

    @Override
    public String toString() {
        StringBuilder output = new StringBuilder();

        for (int i = 0; i < this.data.length; i++) {
            output.append("[ ");
            for (int j = 0; j < this.data.length; j++) {
                output.append(this.data[i][j] + " ");
            }
            output.append("]\n");
        }

        return output.toString();
    }

    public int withPixel(int x, int y, int[][] matrix) {
    }
}
