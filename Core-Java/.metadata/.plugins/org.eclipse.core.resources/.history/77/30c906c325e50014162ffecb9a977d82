package propertiesParser;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.fail;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;
import java.util.Map.Entry;

import org.junit.Before;
import org.junit.Test;

public class PropertiesParserTest {
    private PropertiesParser p;

    @Before
    public void init() {
        p = new PropertiesParser();
    }

    @Test
    public void test() {
        ArrayList<String> prop = new ArrayList<String>();

        prop.add("#this is comment");
        prop.add("a1=b1");
        prop.add("a2 =b2");
        prop.add("a3    =    b3");
        prop.add("   a4 = b4");
        prop.add("a5=b6=b7=b8");
        prop.add("a6=b9 #comment");
        prop.add("a7==b10");

        Map<String, String> actual = p.parseProperties(prop);
        Map<String, String> expected = new HashMap<String, String>();

        expected.put("a1", "b1");
        expected.put("a2", "b2");
        expected.put("a3", "b3");
        expected.put("a4", "b4");
        expected.put("a5", "b6=b7=b8");
        expected.put("a6", "b9 #comment");
        expected.put("a7", "=b10");

        for (Entry<String, String> entry : expected.entrySet()) {
            if (!actual.containsKey(entry.getKey())) {
                fail();
            } else {
                if (actual.get(entry.getKey()) != entry.getValue()) {
                    fail();
                }
            }
        }

        assertEquals(true, true);
    }
}
