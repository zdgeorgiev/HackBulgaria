import java.util.ArrayList;
import java.util.List;

public class KLists {

    private Heap heap;

    public class Node {
        public int value;
        public Node next;
    }

    // Merge K sorted lists.
    public Node merge(List<ArrayList<Integer>> lists) {

        this.heap = new Heap(lists.get(0));

        for (int i = 1; i < lists.size(); i++) {
            Node head = lists.get(i);

            ArrayList<Integer> currentList = new ArrayList<Integer>();

            while (head != null) {
                currentList.add(head.value);
                head = head.next;
            }

            if (i == 0) {
                this.heap = new Heap(currentList);
            } else {
                for (Integer number : currentList) {
                    this.heap.add(number);
                }
            }
        }

        System.out.println(this.heap.sort());

        return null;
    }
}
