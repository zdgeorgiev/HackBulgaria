package sorting;

import java.util.ArrayList;

public class InsertionSort {

    public static void sort(ArrayList<Integer> c) {

        for (int i = 1; i < c.size(); i++) {

            int currentNumber = c.get(i);
            int leftIndex = i - 1;

            while (leftIndex != -1 && currentNumber < c.get(leftIndex)) {
                leftIndex--;
            }

            if (leftIndex + 1 != i) {
                int value = currentNumber;
                int index = leftIndex + 1;

                int previousElement = c.get(index);
                c.set(index, value);

                for (int j = index; j < c.size() - 1; j++) {
                    int prev = c.get(j + 1);
                    c.set(j + 1, previousElement);
                    previousElement = prev;
                }
            }
        }
    }
}