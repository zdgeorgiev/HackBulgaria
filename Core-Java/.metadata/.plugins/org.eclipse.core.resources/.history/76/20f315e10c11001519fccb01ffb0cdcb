package sorting;

import java.util.ArrayList;

public class MergeSort {

    public static void sort(ArrayList<Integer> c) {
        topDownSplit(c, 0, c.size());
    }

    private static void topDownSplit(ArrayList<Integer> array, int start, int end) {

        // If its only elements its sorted
        if (end - start < 2) {
            return;
        }

        int middle = (end + start) / 2;
        topDownSplit(array, start, middle);
        topDownSplit(array, middle, end);
        merge(array, start, middle, end);
    }

    private static void merge(ArrayList<Integer> array, int start, int middle, int end, ArrayList<Integer> temp) {
        
        int firstArrayIndex = start;
        int secondArrayIndex = middle;
        int insertIndex = start;
        
        for (int i = start; i < middle; i++) {
            if ((middle < end) && array.get(firstArrayIndex) > array.get(secondArrayIndex)){
                temp.add(array.get(secondArrayIndex));
            } else {
                array.set(insertIndex, arg1)
            }
            
            insertIndex++;
        }
    }
}
