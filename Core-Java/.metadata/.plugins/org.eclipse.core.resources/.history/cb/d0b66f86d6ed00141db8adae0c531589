package program;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.URL;

public class test {
    public static void main(String[] args) throws IOException, InterruptedException {

        BufferedReader r = new BufferedReader(new FileReader("contries.txt"));

        String s;
        while ((s = r.readLine()) != null) {
            URL url = new URL("http://api.openweathermap.org/data/2.5/weather?q=" + s.replace(" ", "%20"));

            int isOpen = 400;

            BufferedReader in = new BufferedReader(new InputStreamReader(url.openStream()));

            while (isOpen != 200) {
                HttpURLConnection conn = (HttpURLConnection) url.openConnection();
                isOpen = conn.getResponseCode();
            }

            String inputLine;
            while ((inputLine = in.readLine()) != null)
                System.out.println(inputLine);
            in.close();

            System.out.println(s.replace(" ", "%20"));

            // try {
            // JSONObject json = new JSONObject(inputLine);
            // System.out.println(s + " " + json.get("country"));
            // } catch (JSONException e) {
            // System.out.println(e.getMessage());
            // e.printStackTrace();
            // }

        }
    }
}
