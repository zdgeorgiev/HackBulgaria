public class Pair {

    public int vertex;
    public int weight;
    public int parentIndex;

    public Pair(int vertexIndex, int weight, int parentWeight) {
        this.weight = weight;
        this.vertex = vertexIndex;
        this.parentIndex = parentWeight;
    }

    @Override
    public String toString() {
        StringBuilder output = new StringBuilder();

        output.append("To -> " + (vertex + 1) + " with " + weight);

        return output.toString();
    }
}