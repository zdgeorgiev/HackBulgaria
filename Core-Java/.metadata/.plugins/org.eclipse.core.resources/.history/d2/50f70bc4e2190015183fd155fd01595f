public class BST {

    public static class Node {

        public int value;
        public Node left;
        public Node right;
    }

    // Checks if a binary tree is a binary search tree.
    public boolean isBST(Node root) {

        Node leftChild = root.left;
        Node rightChild = root.right;

        if (leftChild != null) {
            if (!isBST(leftChild)) {
                return false;
            }
        }

        if (rightChild != null) {
            if (!isBST(rightChild)) {
                return false;
            }
        }

        return true;
    }
}
