package rotateCollection;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Iterator;
import java.util.LinkedHashSet;

public class Program {
    public static void main(String[] args) {
        Collection<Integer> myCollection = new ArrayList<Integer>();

        for (int i = 0; i < 5; i++) {
            myCollection.add(i);
        }

        System.out.println(myCollection);

        rotate(myCollection, 1);

        System.out.println(myCollection);
    }

    public static void rotate(Collection<Integer> collection, int step) {
        if (step > 0) {
            Iterator<Integer> iterator = collection.iterator();
            Collection<Integer> newCol = new LinkedHashSet<Integer>();

            for (int k = 0; k < step; k++) {
                // Add every item to the end except the last one
                for (int i = 0; i < collection.size() - 1; i++) {
                    Integer number = (Integer) iterator.next();
                    collection.remove(number);
                    collection.add(number);
                }
            }
            
            collection.clear();
            collection.addAll(arg0)
        }
    }
}