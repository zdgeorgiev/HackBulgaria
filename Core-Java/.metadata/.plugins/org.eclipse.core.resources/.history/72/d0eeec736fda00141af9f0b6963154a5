package duplicatesInSets;

import java.util.HashSet;
import java.util.Set;

public class Program {

    public static void main(String[] args) {
        HashSet<Integer> first = new HashSet<Integer>();
        HashSet<Integer> second = new HashSet<Integer>();
        HashSet<Integer> third = new HashSet<Integer>();

        System.out.println(duplicatesItems(first, second, third));
    }

    public static HashSet<Integer> duplicatesItems(HashSet<Integer>... hashSets) {
        int hashSetsCount = 0;
        int minSize = Integer.MAX_VALUE;
        HashSet<Integer> shortest = null;

        for (HashSet<Integer> hashSet : hashSets) {
            if (hashSet.size() < minSize) {
                minSize = hashSet.size();
                shortest = hashSet;
            }

            hashSetsCount++;
        }

        HashSet<Integer> duplicates = new HashSet<Integer>();

        for (Integer numb : shortest) {
            int occurs = 0;

            for (HashSet<Integer> hashSet : hashSets) {
                if (hashSet == shortest) {
                    continue;
                }

                for (Integer otherNumb : hashSet) {
                    if (numb == otherNumb) {
                        break;
                    }
                }
            }

            if (occurs == hashSetsCount - 1) {
                duplicates.add(numb);
            }
        }

        return duplicates;
    }
}